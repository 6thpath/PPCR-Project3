@model PagedList.IPagedList<PPCR.Models.USER>
@using PagedList.Mvc
@{
    ViewBag.Title = "Control Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    if (Convert.ToInt32(Session["Role"]) != 1)
    {
        Response.Redirect("~/Home/Index");
    }

    var countAdmin = 0;
    var countSale = 0;
    var CountAgency = 0;
    var ActivatedCount = 0;
    var NotYetActivatedCount = 0;
}
<!--Libraries-->
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/metisMenu.min.css" rel="stylesheet" />

<!---->
<div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Users Table</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        DataTables Advanced Tables
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table style="width: 100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Email</th>
                                    <th>Full Name</th>
                                    <th>Phone</th>
                                    <th>Address</th>
                                    <th class="text-center">Role</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr class="odd gradeX">
                                        <td>@item.ID</td>                           <!--ID-->
                                        <td>@item.Email</td>                        <!--Email-->
                                        <td>@item.FullName</td>                     <!--Full Name-->
                                        <td>@item.Phone</td>                        <!--Phone-->
                                        <td>@item.Address</td>                      <!--Address-->
                                        <!--Role-->
                                        @if (Convert.ToInt32(@item.Role) == 1)
                                        {
                                            <td class="text-center">Admin</td>
                                        }
                                        else if (Convert.ToInt32(@item.Role) == 2)
                                        {
                                            <td class="text-center">Sale</td>
                                        }
                                        else
                                        {
                                            <td class="text-center">Agency</td>
                                        }
                                        <!--Status-->
                                        @if (@item.Status == true)
                                        {
                                            <td class="text-center">Activated</td>
                                        }
                                        else
                                        {
                                            <td class="text-center">Not yet activated</td>
                                        }
                                        @*<td>
                                            @if (@item.Status == false || @item.Status == null)
                                            {
                                                <a href="@Url.Action("Admin_ActivateAccount","Admin")/@item.ID" type="submit" class="btn btn-success">v</a>
                                            }
                                            else
                                            {
                                                <a href="#" class="btn btn-danger">v</a>
                                            }
                                        </td>*@


                                        <td class="text-center ">
                                            <a href="~/Admin/Admin_Decentralization/@item.ID" class="btn btn-primary">Edit</a>
                                            <a href="#" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>

                                    <!--Count User type-->
                                    if (Convert.ToInt32(item.Role) == 1)
                                    {
                                        countAdmin++;
                                    }
                                    else if (Convert.ToInt32(item.Role) == 2)
                                    {
                                        countSale++;
                                    }
                                    else
                                    {
                                        CountAgency++;
                                    }

                                    <!--Count Status-->
                                    if(item.Status == true)
                                    {
                                        ActivatedCount++;
                                    }
                                    else
                                    {
                                        NotYetActivatedCount++;
                                    }
                                }
                            </tbody>
                        </table>
                        <div style="text-align:center;background-color:#99f8cf">
                            @Html.PagedListPager(Model, page => Url.Action("Admin_ControlPage", new { page }))
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

        
        <div class="row">
            <!--Roles table-->
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading text-center" style="font-family: Kalinga">
                        Roles
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Role</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>Admin</td>
                                        <td style="color:red"> @countAdmin </td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>Sale</td>
                                        <td style="color:purple"> @countSale </td>
                                    </tr>
                                    <tr>
                                        <td>3</td>
                                        <td>Agency</td>
                                        <td style="color:deepskyblue"> @CountAgency </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-6 -->

            <!--xx-->
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading text-center" style="font-family: Kalinga">
                        Account Status
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Status</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="success">
                                        <td>1</td>
                                        <td>Activated</td>
                                        <td>@ActivatedCount</td>
                                    </tr>
                                    <tr class="info">
                                        <td>2</td>
                                        <td>Not yet Activated</td>
                                        <td>@NotYetActivatedCount</td>
                                    </tr>
                                    @*<tr class="warning">
                                        
                                    </tr>
                                    <tr class="danger">
                                        
                                    </tr>*@
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-6 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->
</div>
<!-- /#wrapper -->

<!-- jQuery -->
<script src="~/Scripts/jquery.min.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="~/Scripts/bootstrap.min.js"></script>
<!-- Metis Menu Plugin JavaScript -->
<script src="~/Scripts/metisMenu.min.js"></script>
<!-- DataTables JavaScript -->
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.min.js"></script>
<script src="~/Scripts/dataTables.responsive.js"></script>
<!-- Custom Theme JavaScript -->
<script src="~/Scripts/sb-admin-2.js"></script>
<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}